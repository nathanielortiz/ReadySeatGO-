@model  ReadySeatGO_.Models.CheckStatusModel



@{
    ViewBag.Title = "Details";
}


<h2>@Model.RestaurantName (@Model.Category)</h2>

<p>
    Category: @Model.Category


</p>
<div class="col-lg-6">
    <img src="../../Images/Restaurants/@Model.Image" class="img-circle img-responsive" alt="@Model.RestaurantName" />
</div>

<div class="col-lg-6">
    <br />
    <p>
        Operating Hours: @Model.OperatingHours
    </p>
    <p>
        Owned By:@Model.Owner
    </p>
    <p>
        Located at: @Model.Address
    </p>

    <p>
        @Model.Branch Branch
    </p>
    <p>
        Contact #: @Model.ContactNumber
    </p>
    <p>
        Total # of Seats: @Model.TotalSeats
    </p>
    <p>
        Taken Seats: @ViewBag.Total / @Model.TotalSeats
    </p>

    <a href="@Url.Action("ViewRatings", "RestaurantView", new {id = Model.RestaurantID})" class="btn btn-info btn btn-block">
        View Customer Reviews
    </a>

    <a href="@Url.Action("ViewAVGRating", "RestaurantView", new {id = Model.RestaurantID})" class="btn btn-info btn btn-block">
        View Rating
    </a>
</div>