@model ReadySeatGO_.Models.RestaurantViewModel


@{
    ViewBag.Title = "Restaurants";
}

<div class="col-lg-3">
    <div class="well">
        <h3 class="text-center">Advanced Search</h3>
        <div class="list-group">
            <a href="Index" class="list-group-item">All Categories</a>
            @foreach (var item in Model.Categories)
            {
                <a href="Index?c=@item.CatID" class="list-group-item">
                    <span class="badge">@item.TotalCount</span>
                    @item.Name
                </a>
            }
        </div>
    </div>
</div>
<div class="col-lg-9">

    <h1 class="text-center">Supported Restaurants</h1>


    <hr />
    @foreach (var item in Model.Restaurants)
    {
        <div class="col-lg-4">
            <a href="@Url.Action("Details", "RestaurantView", new {id = item.RestaurantID})">
                <div class="thumbnail">
                    <img src="../Images/Restaurants/@item.Image" class="img-responsive" />
                    <div class="caption">
                        <h3 class="text-center">
                            @item.Restaurant
                            <br />
                            (@item.Category)
                        </h3>
                        <p>
                            Operating Hours: @item.OperatingHours

                        </p>
                        <p>
                            Total Seats: @item.TotalSeats
                        </p>
                        <p>
                            Status: @item.Status
                        </p>


                        <hr />
                        <a href="@Url.Action("AddtoFavorite", "RestaurantView",  new { id=item.RestaurantID })" name="addtofavorite" class="btn btn-info btn btn-block"
                           value="Add to Cart">Add To Favorites</a>
                        <a href="@Url.Action("CheckIn", "RestaurantView",  new { id=item.RestaurantID })" name="checkin" class="btn btn-success btn btn-block"
                           value="Add to Cart">Check In</a>
                        <a href="@Url.Action("CheckOut", "RestaurantView",  new { id=item.RestaurantID })" name="checkout" class="btn btn-success btn btn-block"
                           value="Add to Cart">Check Out</a>
                        <a href="@Url.Action("AddRating", "RestaurantView",  new { id=item.RestaurantID })" name="addrating" class="btn btn-success btn btn-block"
                           value="Add to Cart">Add Rating</a>

                    </div>
                </div>
            </a>
        </div>
    }
</div>