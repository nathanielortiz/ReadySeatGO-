@model ReadySeatGO_.Models.RestaurantViewModel


@{
    ViewBag.Title = "Store";
}

<div class="col-lg-3">
    <div class="well">
        <h3 class="text-center">Advanced Search</h3>
        <div class="list-group">
            <a href="Index" class="list-group-item">All Categories</a>
            @foreach (var item in Model.Categories)
            {
                <a href="Index?c=@item.CatID" class="list-group-item">
                    <span class="badge">@item.TotalCount</span>
                    @item.Name
                </a>
            }
        </div>
    </div>
</div>
<div class="col-lg-9">
    <h1 class="text-center">My Favorites</h1>
    <hr />
    @foreach (var item in Model.Restaurants)
    {
        <div class="col-lg-4">
            <a href="@Url.Action("Details", "RestaurantView", new {id = item.RestaurantID})">
                <div class="thumbnail">
                    <img src="../Images/Restaurants/@item.Image" class="img-responsive" />
                    <div class="caption">
                        <h3 class="text-center">
                            @item.Restaurant (@item.Category)
                        </h3>
                        <p>
                            Operating Hours: @item.OperatingHours

                        </p>
                        <hr />
                        <a href="@Url.Action("RemoveFavorite", "RestaurantView",  new { id=item.RestaurantID })" name="addtocart" class="btn btn-info btn btn-block"
                           value="Add to Cart">Remove</a>
                    </div>
                </div>
            </a>
        </div>
    }
</div>